{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }}|Home
{% endblock %}
{% block stylesheets %}
    {{ parent() }}   
      <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/espritappgestion/css/plugins/datatables/dataTables.bootstrap.css') }}"/>       
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/espritappgestion/css/plugins/datatables/responsive.dataTables.min.css') }}"/>              
{% endblock %}
{% block logo %}
    {{ parent() }}
{% endblock %}
{% block sidebar %}
    {{ parent() }}
{% endblock %}
{% block header_content %}
    {{ parent() }}
     <h1>
        Gestion Membres 
        <small>Ajouter Membre </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="" ><i class="fa fa-dashboard"></i> Gestion Membre</a></li>
        <li><a class="active">ajouter membre</a></li>
    </ol>
{% endblock %}

{% block content %}
 <!-- Main content -->
  <div class="col-md-12"  style="background-color:#ecf0f5;">
       
  </div>
                           


  <!-- Main content -->
  <div class="col-md-12"  style="background-color:#ecf0f5;">
        <br>
        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title">Ajouter Membre</h3>
            </div><!-- /.box-header -->            
            
     {{ form_start(form) }}       
     <div class="box-body">
                    {% for flash_message in app.session.flashbag.get('notice') %}
                        <div class="callout callout-success">
                            <h4>  {{ flash_message }}</h4>
                        </div>
                    {% endfor %}     
         
         <div class="form-group col-md-8">
                        <label for="exampleInputPassword1" class="required">Username</label>
                        <div class="text-red">
                            {{ form_errors(form.username) }}
                        </div>
                            {{ form_widget(form.username, { 'attr': {'class':'form-control'} }) }}     

                    </div>
                          
          <div class="form-group col-md-8">
                        <label for="exampleInputPassword1" class="required">E-mail</label>
                        <div class="text-red">
                            {{ form_errors(form.email) }}
                        </div>
                            {{ form_widget(form.email, { 'attr': {'class':'form-control'} }) }}     

                    </div>
                            
                              <div class="form-group col-md-8">
                        <label for="exampleInputPassword1" class="required">Adresse</label>
                        <div class="text-red">
                            {{ form_errors(form.adresse) }}
                        </div>
                        {{ form_widget(form.adresse, { 'attr': {'class':'form-control'} }) }}

                    </div>
                       
                      <div class="form-group col-md-8">
                        <label for="exampleInputPassword1" class="required">N° Téléphone</label>
                        <div class="text-red">
                            {{ form_errors(form.telephone) }}
                        </div>
                        {{ form_widget(form.telephone, { 'attr': {'class':'form-control'} }) }}

                    </div>
                        
                        
                            
                  <div class="form-group col-md-8">
                        <label for="exampleInputPassword1" class="required">Site</label>
                        <div class="text-red">
                            {{ form_errors(form.site) }}
                        </div>
                         {{ form_widget(form.site, { 'attr': {'class':'form-control'} }) }}

                    </div>                                             
                    
                           <div class="form-group col-md-8">
                    <label for="exampleInputPassword1"> {{ form_label(form.plainPassword.first) }}</label>
                    <div class="text-red">
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class':'form-control input-sm'} }) }}     

                </div>

                <div class="form-group col-md-8">
                    <label for="exampleInputPassword1"> {{ form_label(form.plainPassword.second) }}</label>
                    <div class="text-red">
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class':'form-control input-sm'} }) }}     

                </div>                            

                            
     </div>
                             {{ form_rest(form) }}
                             <div class="box-footer">
                                 <input type="reset" class="btn btn-primary"/>
                    <button type="submit" id="loading-btnModal" class="btn btn-primary pull-right">Ajouter</button>
                </div>
                            
       {{ form_end(form) }}   
        </div>
    
      <div class="box box-warning"> <!-- table of messages details -->
            <div class="box-header with-border">
                <h3 class="box-title">Détails des membres</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>                
                </div>
            </div><!-- /.box-header -->
            <div id="form_body" class="box-body">        
                {% include 'EspritGestionBundle:Default:show.html.twig' %}
            </div><!-- /.box-body -->
        </div><!-- /.box -->

  </div>
                           


    

{% endblock %}




{% block footer %}
    {{ parent() }}
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/espritappgestion/js/plugins/datatables/jquery.dataTables.min.js') }}" type="text/javascript"></script>       
    <script src="{{ asset('bundles/espritappgestion/js/plugins/datatables/dataTables.bootstrap.min.js') }}" type="text/javascript"></script>       
     <script src="{{ asset('bundles/espritappgestion/js/plugins/datatables/dataTables.responsive.min.js') }}" type="text/javascript"></script>       
{% endblock %}